<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eu.kudan.rahasianusantara.activity.MissionEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="6dp"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/title_mission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mission Title"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/order_mission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Order"
                    android:inputType="numberSigned" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mission_map_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroundLight"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/label_model_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Model"
                            android:textAllCaps="true"
                            android:textColor="@color/colorTextDark"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/description_model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pilih model yang akan ditempilkan dilokasi saat ini." />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_model_type"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/choose_model_type"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/colorBackgroundWhite"
                                android:text="Choose Model"
                                android:textColor="@color/colorTextDark" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/label_path_model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorBackgroundWhite"
                            android:padding="5dp"
                            android:text="Model not choosen"
                            android:textAlignment="center"
                            android:textColor="@color/colorTextDark"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/label_marker_based"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Marker (Optional)"
                            android:textAllCaps="true"
                            android:textColor="@color/colorTextDark"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/description_marker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pilih marker untuk menampilkan model atau biarkan model terlihat pada geolokasi." />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkbox_marker_based"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Use Marker" />

                            <Button
                                android:id="@+id/choose_marker"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/colorBackgroundWhite"
                                android:text="Choose Marker"
                                android:textColor="@color/colorTextDark" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/label_path_marker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorBackgroundWhite"
                            android:padding="5dp"
                            android:text="Marker not Choosen"
                            android:textAlignment="center"
                            android:textColor="@color/colorTextDark"
                            android:textStyle="bold" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/colorBackgroundWhite"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/label_dialogue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dialogue"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/mission_dialogue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dialogue"
                    android:inputType="textMultiLine"/>

            </LinearLayout>

            <Button
                android:id="@+id/done_mission_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="6dp"
                android:text="Done" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
